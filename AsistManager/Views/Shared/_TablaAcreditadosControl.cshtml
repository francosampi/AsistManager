@using AsistManager.Models.ViewModels
@model List<AcreditadoSearchViewModel>

<head>
    <link rel="stylesheet" href="~/css/tablaRegistros.css" />
</head>

<table class="table table-hover table-responsive tabla-registros mt-4">
    <thead>
        <tr>
            <th class="sortable" data-column="Nombre">Nombre</th>
            <th class="sortable" data-column="Apellido">Apellido</th>
            <th class="sortable" data-column="Dni">DNI</th>
            <th class="sortable" data-column="Cuit">CUIT</th>
            <th class="sortable" data-column="Celular">Celular</th>
            <th class="sortable" data-column="Grupo">Grupo</th>
            <th class="sortable" data-column="Habilitado">Habilitado</th>
            <th class="sortable" data-column="Alta">Alta</th>
            <th class="sortable" data-column="Ingreso">Ingreso</th>
            <th class="sortable" data-column="Egreso">Egreso</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <!--Recorrer registros la lista de acreditados y mostrarlos-->
        @foreach (var registro in Model)
        {
            <tr>
                <!--Informar datos del acreditado-->
                <td class="rowCampo">@Html.DisplayFor(m => registro.Acreditado.Nombre)</td>
                <td class="rowCampo">@Html.DisplayFor(m => registro.Acreditado.Apellido)</td>
                <td class="rowCampo">@Html.DisplayFor(m => registro.Acreditado.Dni)</td>
                <td class="rowCampo">@Html.DisplayFor(m => registro.Acreditado.Cuit)</td>
                <td class="rowCampo">@Html.DisplayFor(m => registro.Acreditado.Celular)</td>
                <td class="rowCampo">@Html.DisplayFor(m => registro.Acreditado.Grupo)</td>
                <td class="rowCampo">@(registro.Acreditado.Habilitado ? "Sí" : "No")</td>
                <td class="rowCampo">@(registro.Acreditado.Alta ? "Sí" : "No")</td>

                <!--Informar hora de ingreso y egreso-->
                <td class="rowCampo">@Html.DisplayFor(m => registro.Ingreso.FechaOperacion)</td>
                <td class="rowCampo">@Html.DisplayFor(m => registro.Egreso.FechaOperacion)</td>

                <!--Operaciones disponibles-->
                <td>
                    <div class="d-inline-flex">
                        <a class="btn btn-info shadow-sm" asp-action="Details" asp-route-id="@registro.Acreditado.IdEvento" asp-route-dni="@registro.Acreditado.Dni">
                            <i class="bi-list-check"></i>
                        </a>
                        <a class="btn btn-warning shadow-sm" asp-action="Update" asp-route-id="@registro.Acreditado.Id">
                            <i class="bi-pencil"></i>
                        </a>
                        <a class="btn btn-danger shadow-sm" asp-action="Delete" asp-route-id="@registro.Acreditado.Id">
                            <i class="bi-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>